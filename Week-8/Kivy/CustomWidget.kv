# Create common attributes for our custom buttons
<CustomButton@Button>:
    # font size
    font_size: 32
    # color, r,g,b,alpha
    color: 0, 0, 0, 1
    # button size
    size: 150, 50
    # color of the button when not being pressed (white default) (you can also use a .png)
    background_normal: ''
    # color when pressed
    background_color: .88, .88, .88, 1

<CustomWidget>:
    # Create our custom button
    CustomButton:
        text: "A Button"
        # place farthest left and 200 up on the y
        pos: root.x, 200

    CustomButton:
        text: "B Button"
        # place farthest left and 200 up on the y
        pos: 200, root.y

    CustomButton:
        text: "C Button"
        # place 200 from left and 400 from bottom
        pos: 200, 400